extends layout

block content

    h2 LOG IN
    p Please Login below

    form(method='post',action='/users/login',enctype='application/x-www-form-urlencoded')
        .form-group
            label Username
            input.form-control(type='username' ,name='username', placeholder='USERNAME')
        .form-group
            label Password
            input.form-control(type='password', name='password' ,placeholder='PASSWORD')

        input.btn.btn-default(type='submit', name='submit' ,value='Login')